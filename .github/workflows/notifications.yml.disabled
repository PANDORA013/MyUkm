name: Notifications

on:
  workflow_run:
    workflows: ["Code Quality", "Browser Tests", "Deploy to Production"]
    types:
      - completed

jobs:
  send-notification:
    name: Send notification
    runs-on: ubuntu-latest
    if: >
      github.event.workflow_run.conclusion != 'skipped' &&
      (github.event.workflow_run.conclusion == 'failure' ||
       github.event.workflow_run.conclusion == 'success')
    env:
      BROADCAST_DRIVER: "log"
    steps:
      - name: Slack Notification
        uses: rtCamp/action-slack-notify@v2
        env:
          SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK_URL }}
          SLACK_TITLE: "Workflow: ${{ github.event.workflow_run.name }}"
          SLACK_MESSAGE: "${{ github.event.workflow_run.conclusion == 'success' && '✅' || '❌' }} ${{ github.event.workflow_run.conclusion == 'success' && 'Succeeded' || 'Failed' }}: ${{ github.event.workflow_run.head_commit.message }}"
          SLACK_COLOR: ${{ github.event.workflow_run.conclusion == 'success' && 'good' || 'danger' }}
          SLACK_USERNAME: GitHub Actions
          SLACK_ICON: https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png

      - name: Email Notification
        if: github.event.workflow_run.conclusion == 'failure'
        uses: dawidd6/action-send-mail@v3
        with:
          server_address: smtp.gmail.com
          server_port: 465
          username: ${{secrets.MAIL_USERNAME}}
          password: ${{secrets.MAIL_PASSWORD}}
          subject: "Workflow ${{ github.event.workflow_run.conclusion }}: ${{ github.event.workflow_run.name }}"
          to: ${{ secrets.NOTIFICATION_EMAIL }}
          from: GitHub Actions
          body: |
            Workflow: ${{ github.event.workflow_run.name }}
            Status: ${{ github.event.workflow_run.conclusion }}
            Commit: ${{ github.event.workflow_run.head_commit.message }}
            URL: ${{ github.event.workflow_run.html_url }}
